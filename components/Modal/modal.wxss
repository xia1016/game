.modal_self {
    position: absolute;
    top: 20%;
    left: 11.5%;
    width: 300rpx;
    height: 370rpx;
    background-color: saddlebrown;
    border-radius: 30rpx;
    box-shadow: 0 0 10rpx 0;
    z-index: 10;
    overflow: hidden;
    display: flex;
    justify-content: center;
    text-align: center;
}
.modal_img {
    width: 300rpx;
    height: 310rpx;
}
.text {
    font-size: 40rpx;
    font-weight: bold;
    line-height: 1.2;
}
