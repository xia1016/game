.box {
    position: relative;
    z-index: 2;
    width: 500rpx;
    height: 500rpx;
    display: flex;
    flex-direction: column;
    background-color: #333;
    overflow: hidden;
    left: 50%;
    transform: translateX(-50%);
    top: 50rpx;
    border: 5rpx solid #f4e19c;
}

.text {
    font-size: 20rpx;
    color: #000;
    position: absolute;
    z-index: 10;
    font-weight: 900;
}

.bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 500rpx;
    height: 500rpx;
    opacity: 0.3;
    z-index: 1;
}

.box_wrap {
    border: 5rpx solid #f4e19c;
    position: relative;
    z-index: 2;
    width: 500rpx;
    height: 500rpx;
    display: flex;
    background-color: #000;
    overflow: hidden;
    left: 50%;
    transform: translateX(-50%);
    top: 50rpx;
    flex-direction: row;
}

.box_item {
    display: flex;
}

.block {
    display: flex;
    flex-direction: column;
}

.box_2 {
    margin-top: 80rpx;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    width: 500rpx;
    height: 500rpx;
    z-index: 2;
    overflow: hidden;
    left: 50%;
    transform: translateX(-50%);
    background-color: #e0c14e;
    border: 3px solid #f4e19c;
}

.box_2_item {
    display: flex;
}

.img1 {
    position: absolute;
    z-index: 0;
    height: 100vh;
    width: 100vw;
    top: 0;
}

.icons {
    width: 100rpx;
    height: 100rpx;
    z-index: 2;
}

.modal {
    position: absolute;
    top: 0;
    width: 100vw;
    height: 100vh;
    z-index: 10;
    background-color: rgba(0, 0, 0, 0.8);
}

.replay {
    position: absolute;
    top: 80vh;
    left: 50%;
    transform: translateX(-50%);
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 180rpx;
    height:80rpx;
    background-color: #f4cf47;
    z-index: 2;
    border-radius: 30rpx;
    color: #000;
    font-size: 50rpx;
}

.replay:active {
    box-shadow: 0rpx 15rpx 10rpx 0 #000;
}