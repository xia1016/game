.container {
    height: 100vh;
    background-color: #8d612e;
    position: relative;
    overflow: hidden;
}

.container {
    --sub_color1: #f4e19c;
}

.container::before{
    left: 0;
}
.container::after{
    right: 0;
    transform : rotateY(180deg) ;
}

.box {
    position: relative;
    z-index: 2;
    width: 500rpx;
    height: 500rpx;
    display: flex;
    flex-direction: column;
    background-color: #000;
    overflow: hidden;
    left: 50%;
    transform: translateX(-50%);
    top: 50rpx;
    border: 5rpx solid #f4e19c;
}

.text {
    font-size: 20rpx;
    color: #000;
    position: absolute;
    z-index: 10;
    font-weight: 900;
}

.bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 500rpx;
    height: 500rpx;
    opacity: 0.3;
    z-index: 1;
}

.box_wrap {
    border: 5rpx solid #f4e19c;
    position: relative;
    z-index: 2;
    width: 500rpx;
    height: 500rpx;
    display: flex;
    background-color: #000;
    overflow: hidden;
    left: 50%;
    transform: translateX(-50%);
    top: 50rpx;
    flex-direction: row;
}

.box_item {
    display: flex;
    height: 20%;
}

.block {
    display: flex;
    flex-direction: column;
    width: 20%;
}

.box_2 {
    margin-top: 80rpx;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    width: 500rpx;
    height: 500rpx;
    z-index: 2;
    overflow: hidden;
    left: 50%;
    transform: translateX(-50%);
    background-color: #e0c14e;
    border: 3px solid #f4e19c;
}

.box_2_item {
    display: flex;
    height: 20%;
}

.img1 {
    position: absolute;
    z-index: 0;
    height: 100vh;
    width: 100vw;
    top: 0;
}

.icons {
    width: 20%;
    height: 100%;
    z-index: 2;
}
.block .icons {
    width: 100%;
    height: 20%;
    z-index: 2;
}
.box_2 .icons {
    width: 20%;
    height: 20%;
    z-index: 2;
}

.modal {
    position: absolute;
    top: 0;
    width: 100vw;
    height: 100vh;
    z-index: 10;
    background-color: rgba(0, 0, 0, 0.8);
}

.replay {
    position: absolute;
    top: 92vh;
    left: 50%;
    transform: translateX(-50%);
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 180rpx;
    height:80rpx;
    background-color: #f4cf47;
    z-index: 2;
    border-radius: 30rpx;
    color: #000;
    font-size: 45rpx;
}

.replay:active {
    box-shadow: 0rpx 15rpx 10rpx 0 #000;
}