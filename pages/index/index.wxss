.container {
    height: 100vh;
    background-color: #000;
    position: relative;
}
.box {
    position: relative;
    z-index: 2;
    width: 300px;
    height: 300px;
    display: flex;
    flex-direction: column;
    border: 1px solid #000;
    /* background-color: rgb(109, 64, 6); */
    background-color: #333;
    overflow: hidden;
    left: 50%;
    transform: translateX(-50%);
    top: 50px;
    
}
.text {
    font-size: 20px;
    color: #000;
    position: absolute;
    z-index: 10;
    font-weight: 900;
}
.bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 300px;
    height: 300px;
    opacity: 0.3;
    z-index: 1;
}
.box_wrap {
    position: relative;
    z-index: 2;
    width: 300px;
    height: 300px;
    display: flex;
    border: 1px solid #000;
    /* background-color: rgb(109, 64, 6); */
    background-color: #000;
    overflow: hidden;
    left: 50%;
    transform: translateX(-50%);
    top: 50px;
    flex-direction:row;
}
.box_item {
    display: flex;
}
.block {
    display: flex;
    flex-direction: column;
}
.box_2 {
    margin-top: 100px;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    width: 300px;
    height: 300px;
    z-index: 2;
    border: 1px solid #000;
    /* background-color:rgb(109, 64, 6); */
    overflow: hidden;
    left: 50%;
    transform: translateX(-50%);
}
.box_2_item {
    display: flex;
}
.img1 {
    position: absolute;
    z-index: 0;
    height: 100vh;
    width: 100vw;
    top: 0;
}
.icons {
    width: 60px;
    height: 60px;
    z-index: 2;
}
.modal {
    position: absolute;
    top: 0;
    width: 100vw;
    height: 100vh;
    z-index: 10;
    background-color: rgba(0, 0, 0,0.8);
}
.replay {
    position: relative;
    width: 80px;
    height: 40px;
    background-color: rgb(22, 19, 17);
    z-index: 2;
    border-radius: 30px;
    left: 10%;
    margin-top: 5px;
    color: bisque;
    display: flex;
    justify-content: center;
    align-items: center;
}